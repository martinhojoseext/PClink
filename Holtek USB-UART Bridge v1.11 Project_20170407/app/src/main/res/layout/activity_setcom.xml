<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:id="@+id/CancelBtn"
            android:background="@drawable/btn_back"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />

        <Button
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:id="@+id/SaveBtn"
            android:background="@drawable/btn_ok"
            android:layout_marginRight="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="0.1"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baud rate"
            android:id="@+id/textView4"
            android:layout_weight="0.2"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="gravity"
            android:layout_marginLeft="10dp"
            android:paddingLeft="15dp" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/spinnerRate"
            android:layout_weight="0.8"
            android:spinnerMode="dropdown"
            android:entries="@array/spinner_rates"
            android:background="@android:color/white"
            android:textAlignment="gravity"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="0.1"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop bits "
            android:id="@+id/textView5"
            android:textColor="@android:color/white"
            android:layout_weight="0.2"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:paddingLeft="15dp" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/spinnerStop"
            android:layout_weight="0.8"
            android:entries="@array/spinner_stops"
            android:background="@android:color/white"
            android:textAlignment="gravity"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="0.1"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data bits "
            android:id="@+id/textView6"
            android:textColor="@android:color/white"
            android:layout_weight="0.2"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="15dp"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/spinnerData"
            android:layout_weight="0.8"
            android:entries="@array/spinner_datas"
            android:background="@android:color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="0.1"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parity       "
            android:id="@+id/textView7"
            android:textColor="@android:color/white"
            android:layout_weight="0.2"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:paddingLeft="15dp" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/spinnerParity"
            android:background="@android:color/white"
            android:layout_weight="0.8"
            android:entries="@array/spinner_pritys"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:layout_marginTop="15dp"></LinearLayout>
</LinearLayout>